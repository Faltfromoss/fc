include _head
.container
    .row
        .col-md-3
        .col-md-9
            ul#pills-tab.nav.mb-3(role='tablist')
                li.nav-item
                    a#pills-home-tab.nav-link.active(data-toggle='pill', href='#pills-menu', role='tab', aria-controls='pills-menu', aria-selected='true') Меню
                li.nav-item
                    a#pills-profile-tab.nav-link(data-toggle='pill', href='#pills-about', role='tab', aria-controls='pills-about', aria-selected='false') О заведении
                li.nav-item
                    a#pills-contact-tab.nav-link(data-toggle='pill', href='#pills-delivery', role='tab', aria-controls='pills-delivery', aria-selected='false') Условия доставки
            h2.shopTitle.mb-3 Pizza Time - Популярные блюда
    .row
        .col-md-3
            include _food-menu
        .col-md-9
            #pills-tabContent.tab-content
                #pills-menu.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='pills-menu-tab')
                    include tabs/_menu
                #pills-about.tab-pane.fade(role='tabpanel', aria-labelledby='pills-about-tab')
                    include tabs/_about
                #pills-delivery.tab-pane.fade(role='tabpanel', aria-labelledby='pills-delivery-tab')
                    include tabs/_delivery
